<section class="hero hero--with-image section">
  <div class="container">
    <div class="hero--with-image">
      <div>
        <h1 class="section__title" style="font-size:44px;line-height:1.1">{{ section.settings.heading | default: 'Modern Fine Jewelry' }}</h1>
        <p style="color:var(--color-muted);max-width:560px">{{ section.settings.subheading | default: 'Timeless pieces designed in South Africa â€” crafted to elevate the everyday.' }}</p>
        <div style="margin-top:22px;display:flex;gap:12px">
          <a class="btn" href="{{ section.settings.primary_link }}">{{ section.settings.primary_label | default: 'Shop New In' }}</a>
          <a class="btn btn--secondary" href="{{ section.settings.secondary_link }}">{{ section.settings.secondary_label | default: 'Explore Collections' }}</a>
        </div>
      </div>
      <div class="hero__media">
        {% if section.settings.image != blank %}
          <img src="{{ section.settings.image | image_url: width: 1200 }}" alt="{{ section.settings.heading }}">
        {% else %}
          <img src="https://images.unsplash.com/photo-1603565816278-2ea9f9d6775b?q=80&w=1600&auto=format&fit=crop" alt="Jewelry hero"/>
        {% endif %}
      </div>
    </div>
  </div>

  {% schema %}
  {
    "name": "Hero",
    "settings": [
      {"type":"text","id":"heading","label":"Heading"},
      {"type":"text","id":"subheading","label":"Subheading"},
      {"type":"image_picker","id":"image","label":"Image"},
      {"type":"text","id":"primary_label","label":"Primary Button Label"},
      {"type":"url","id":"primary_link","label":"Primary Button Link"},
      {"type":"text","id":"secondary_label","label":"Secondary Button Label"},
      {"type":"url","id":"secondary_link","label":"Secondary Button Link"}
    ],
    "presets": [{"name":"Hero"}]
  }
  {% endschema %}
</section>
